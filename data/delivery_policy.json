{
    "importance_policies": {
        "high": {
            "notify_researcher": true,
            "send_email": true,
            "create_calendar_entry": true,
            "add_to_reading_list": true,
            "allow_colleague_sharing": true,
            "priority_label": "urgent"
        },
        "medium": {
            "notify_researcher": true,
            "send_email": false,
            "create_calendar_entry": false,
            "add_to_reading_list": true,
            "allow_colleague_sharing": true,
            "priority_label": "normal"
        },
        "low": {
            "notify_researcher": false,
            "send_email": false,
            "create_calendar_entry": false,
            "add_to_reading_list": false,
            "allow_colleague_sharing": false,
            "priority_label": "low"
        },
        "log_only": {
            "notify_researcher": false,
            "send_email": false,
            "create_calendar_entry": false,
            "add_to_reading_list": false,
            "allow_colleague_sharing": false,
            "priority_label": "none"
        }
    },
    "email_settings": {
        "enabled": true,
        "simulate_output": true,
        "output_directory": "outputs/emails",
        "filename_template": "email_{timestamp}.txt",
        "include_link": true,
        "include_abstract": true,
        "include_relevance_explanation": true,
        "max_papers_per_email": 10,
        "subject_template": "[ResearchPulse] {priority}: {count} new papers found",
        "from_address": "researchpulse@localhost"
    },
    "calendar_settings": {
        "enabled": true,
        "simulate_output": true,
        "output_directory": "outputs/calendar",
        "filename_template": "event_{timestamp}.ics",
        "event_duration_minutes": 30,
        "default_reminder_minutes": 60,
        "event_title_template": "Read: {paper_title}",
        "schedule_within_days": 7
    },
    "reading_list_settings": {
        "enabled": true,
        "output_file": "outputs/reading_list.txt",
        "format": "markdown",
        "include_link": true,
        "include_date_added": true,
        "include_importance": true,
        "max_entries": 100
    },
    "colleague_sharing_settings": {
        "enabled": true,
        "simulate_output": true,
        "output_directory": "outputs/shares",
        "filename_template": "share_{colleague}_{timestamp}.txt",
        "include_personal_note": true,
        "include_relevance_explanation": true,
        "respect_sharing_preferences": true,
        "max_papers_per_share": 5
    },
    "global_settings": {
        "quiet_hours_start": "22:00",
        "quiet_hours_end": "08:00",
        "timezone": "America/Los_Angeles",
        "batch_notifications": false,
        "log_all_decisions": true
    }
}