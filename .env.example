# ResearchPulse Environment Variables Template
# Copy this file to .env and fill in your values
# All variables are required unless marked as optional

# =============================================================================
# LLM Provider Configuration
# =============================================================================
LLM_PROVIDER=your_llm_provider_here  # e.g., openai, azure, anthropic, etc. (must be supported by the codebase)

# OpenAI-compatible LLM API settings
LLM_API_BASE=https://api.llmod.ai/v1
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL_NAME=your_model_name_here

# =============================================================================
# Embeddings Configuration
# =============================================================================
EMBEDDING_API_BASE=https://api.llmod.ai/v1
EMBEDDING_API_KEY=your_embedding_api_key_here
EMBEDDING_API_MODEL=your_model_name_here
EMBEDDING_API_DIMENSION=your_embedding_dimension_here  # e.g., 1536 for OpenAI's text-embedding-3-small

# =============================================================================
# Pinecone Vector Store Configuration
# =============================================================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=your_pinecone_index_name_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here  # e.g., eu-west1-gcp
# Optional: namespace for vector isolation (default: demo)
PINECONE_NAMESPACE=demo

# =============================================================================
# Supabase DB
# =============================================================================
# Connection Pooler (recommended for deployments - uses IPv4)
# Get from Supabase Dashboard > Settings > Database > Connection pooling
DATABASE_URL=your_database_url_here
PASSWORD_TO_DB=your_db_password_here

# =============================================================================
# Server Configuration
# =============================================================================
APP_HOST=0.0.0.0
APP_PORT=8000

# =============================================================================
# SMTP Email Configuration (for real email sending)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
# Optional: From address (defaults to SMTP_USER)
SMTP_FROM=your_email@gmail.com

# =============================================================================
# arXiv Configuration (optional)
# =============================================================================
# Fallback max papers to fetch when the dashboard "Papers per Run" setting
# is not available. The dashboard setting takes priority over this env var.
# ARXIV_MAX_RESULTS=20
